<ItemLabel@Label>:
	font_size: '25sp'
	halign: 'left'
	valign: 'middle'
	text_size: self.size

<ItemInput@TextInput>:
	font_size: '40sp'
	multiline: False
	input_type: 'number'

<Container>:
	rows: 3

	learning_rate: learning_rate
	deadline: deadline
	iterations: iterations
	w_1: w_1
	w_2: w_2

	AnchorLayout:
		size_hint: 1, 0.30
		padding: 30

		ItemLabel: 
			text: 'RTS Lab 3.1 IO-71 Vorotyntsev'


	GridLayout:
		cols: 2

		BoxLayout:
			orientation: 'vertical'
			padding: [30, 0, 0, 0]

			ItemLabel:
				text: "Learning Rate"

			ItemLabel:
				text: "Deadline (1s)"

			ItemLabel:
				text: "Iterations"

			ItemLabel:
				text: "W1"
			
			ItemLabel:
				text: "W2"
	
		BoxLayout:
			orientation: 'vertical'
			size_hint: 0.5, 1

			ItemInput:
				id: learning_rate
				input_filter: 'float'
			
			ItemInput:
				id: deadline
				input_filter: 'int'

			ItemInput:
				id: iterations
				input_filter: 'int'

			ItemLabel:
				id: w_1

			ItemLabel:
				id: w_2


	BoxLayout:
		size_hint: 0.9, 0.15
		padding: [30, 0, 30, 20]

		Button:
			text: 'Go!'
			font_size: 40
			on_release:
				root.calculate()

